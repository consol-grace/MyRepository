        var strMask = '<div style="position:absolute;z-index:100;width:auto;height:auto;display:none;" id="pMask' + tmpId + '"></div>';
        jQuery(strMask).appendTo(jQuery(document.body));

        var pMask = document.getElementById("pMask" + tmpId);
