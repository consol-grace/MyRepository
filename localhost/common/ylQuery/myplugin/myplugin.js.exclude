jQuery.AutoComplete = function(opts) {
    if (!opts.Width) opts.Width = 180;
    if (!opts.Max) opts.Max = 50;

    $("#" + opts.ResultID).autocomplete(opts.Url, {
        multiple: true,
        width: opts.Width,
        max: opts.Max,
        multipleSeparator: ' ',
        dataType: 'json',
        valueId: opts.ValueID,

        parse: function(data) {
            var rows = [];
            if (!opts.Spliter) {
                $.each(data, function(i) {
                    rows[rows.length] = {
                        data: data[i].Abbr,
                        value: data[i].Code,
                        result: data[i].Abbr
                    };
                });
            }
            else {
                $.each(data, function(i) {
                    rows[rows.length] = {
                        data: data[i].PinYin + opts.Spliter + data[i].Abbr,
                        value: data[i].Code,
                        result: data[i].Abbr
                    };
                });
            }
            return rows;
        },
        formatItem: function(row, i, n) {
            return row;
        }
    });
}

